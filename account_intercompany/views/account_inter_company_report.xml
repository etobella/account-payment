<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_account_inter_company">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="12"/>
            <t t-set="data_report_header_spacing" t-value="9"/>
            <t t-set="data_report_dpi" t-value="110"/>
            <t t-call="web.internal_layout">
                <table class="table table-condensed">
                    <thead>
                        <tr class="text-center">
                            <th>Company</th>
                            <th>Account</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="accounts" t-as="account">
                            <tr style="">
                                <td>
                                    <span t-esc="account['company']"/>
                                </td>
                                <td>
                                    <span t-esc="account['code']"/>
                                    <span t-esc="account['name']"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="account['balance']"
                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
    <report
            id="action_report_account_inter_company"
            model="account.inter.company"
            string="Inter company report"
            report_type="qweb-pdf"
            name="account_intercompany.report_account_inter_company"
            file="account_intercompany.report_account_inter_company"
    />

</odoo>