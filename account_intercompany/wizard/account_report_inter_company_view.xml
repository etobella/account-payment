<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_inter_company_report_view" model="ir.ui.view">
        <field name="name">Inter company Report</field>
        <field name="model">account.inter.company.report</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group>
                <field name="company_ids" widget="many2many_tags" options="{'no_create_edit': True, 'no_quick_create': True}"/>
            </group>
            <footer>
                <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_account_inter_company_report_menu" model="ir.actions.act_window">
        <field name="name">Common Report</field>
        <field name="res_model">account.inter.company.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_inter_company_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="account_inter_company_report_menu" name="Inter company report" parent="menu_inter_company" sequence="1" groups="account.group_account_manager" action="action_account_inter_company_report_menu" />
</odoo>